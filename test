pipeline {
    agent {
    label 'aws-jenkins-slave-1'
    }
      stages { 
        stage('Example') {
            steps {
              sh '''#!/bin/bash
              echo "Вы выбрали $PARAM_NAME"
              echo "----------------------------------------------------"
              case "$PARAM_NAME" in 
              "--git")
              cd /home/admin
              git > keeep
              cat keeep
              ;;
              "--env")
              cd /home/admin
              env > keeep
              cat keeep
              ;;
              "--git --env") 
              echo "----------------------------------------------------"
              git & env > keep
              ;;
             
            esac
         '''
         
         }
     }
  }   
}
