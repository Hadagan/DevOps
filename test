pipeline {
    agent {
    label 'aws-jenkins-slave-1'
    }
    stages { 
        stage('Example') {
            steps {
              sh '''#!/bin/bash
              read $1
              case "$1" in --git)
              echo "ты выбрал git";;
              --env)
              echo "ты выбрал env";;
              esac
         '''
            }
        }
    }
}
