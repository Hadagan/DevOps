pipeline {
    agent {
    label 'aws-jenkins-slave-1'
    }
      stages { 
        stage('Example') {
            steps {
              sh '''#!/bin/bash
              echo "ты выбрал $PARAM_NAME"
              case "$PARAM_NAME" in 
              
              "--git")
              echo "ВЫ ВЫБРАЛИ GIT"
              shift
              ;;
              "--env")
              echo "ВЫ ВЫБРАЛИ ENV"
              shift
              ;;
              "--git --env")
              echo "ВЫ ВЫБРАЛИ GIT И ENV"
              shift
              ;;
             
            esac
         '''
         
         }
     }
  }   
}
